<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.myapplication.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="16dp">

        <CheckBox
            android:id="@+id/Binario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binario"
            android:layout_above="@+id/Octal"
            android:layout_alignLeft="@+id/Number"
            android:layout_alignStart="@+id/Number" />

        <CheckBox
            android:id="@+id/Octal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Decimal"
            android:layout_alignLeft="@+id/Binario"
            android:layout_alignStart="@+id/Binario"
            android:text="Octal" />

        <CheckBox
            android:id="@+id/Decimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Hexadecimal"
            android:layout_alignLeft="@+id/Octal"
            android:layout_alignStart="@+id/Octal"
            android:text="Decimal" />

        <CheckBox
            android:id="@+id/Hexadecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button"
            android:layout_alignLeft="@+id/button"
            android:layout_alignStart="@+id/Decimal"
            android:layout_marginBottom="18dp"
            android:text="Hexadecimal" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Hexadecimal"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/Hexadecimal"
            android:layout_marginBottom="73dp"
            android:text="CONVERT!" />

        <EditText
            android:id="@+id/Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="44dp"
            android:ems="10"
            android:inputType="number" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
